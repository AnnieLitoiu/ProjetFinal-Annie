<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('/assets/question.svg') }}" type="image/svg+xml">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

        {% block stylesheets %}
        <style>
            body {
                background-color: white !important;
                color: hsla(180, 100%, 24.9%, 0.9); 
            }
            a {
                color: black;
                text-decoration: none;
            }
            a:hover {
                text-decoration: underline;
            }
            h1, h2, h3, h4, h5, h6 {
                color: #007f7f;
            }
            .navbar-custom {
                background-color: #e0f7f7;
                border-bottom: 1px solid #007f7f;
            }
            .btn-turquoise {
            background-color: #007f7f;
            color: white;
            border: none;
            }
            .btn-turquoise:hover {
                background-color: #005f5f;
                color: white;
            }
            .btn-outline-turquoise {
                color: #007f7f;
                border: 1px solid #007f7f;
                background-color: transparent;
                }
            .btn-outline-turquoise:hover {
                background-color: #007f7f;
                color: white;
            }
            .btn-outline-turquoise {
                color: #007f7f;
                border: 1px solid #007f7f;
                background-color: transparent;
            }

            .btn-outline-turquoise:hover {
                background-color: #007f7f;
                color: white;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
        <nav class="navbar navbar-custom px-3 py-2">
            <div class="container-fluid d-flex justify-content-end">
                {# Affiche uniquement si la route actuelle est celle de la liste des quiz #}
                {% if app.request.attributes.get('_route') == 'app_quiz_liste' or app.request.attributes.get('_route') == 'app_quiz_jouer' %}
                    <a href="{{ path('accueil_list_niveaux') }}" class="btn btn-outline-turquoise btn-sm">
                        Changer de niveau
                    </a>
                {% endif %}
            </div>
        </nav>
        {% endblock %}

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
