{# templates/bundles/KnpPaginatorBundle/Pagination/bootstrap_v5_pagination.html.twig #}
{% set show_numbers = show_numbers is defined ? show_numbers : true %}

{% if pageCount > 1 %}
    <nav aria-label="Pagination">
        <ul class="pagination justify-content-center gap-2">

            {# Lien vers la page précédente #}
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link btn btn-outline-turquoise" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" aria-label="Page précédente">
                        <span aria-hidden="true">⬅ Précédent</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">⬅ Précédent</span>
                </li>
            {% endif %}

            {# Liens vers les pages #}
            {% if show_numbers %}
                {% for page in pagesInRange %}
                    {% if page != current %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                        </li>
                    {% else %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% endif %}
                {% endfor %}
            {% endif %}

            {# Lien vers la page suivante #}
            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link btn btn-outline-turquoise" href="{{ path(route, query|merge({(pageParameterName): next})) }}" aria-label="Page suivante">
                        <span aria-hidden="true">Suivant ➡</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Suivant ➡</span>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}
