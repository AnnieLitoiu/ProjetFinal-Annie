{% extends 'base.html.twig' %}

{% block title %}Mon activité{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Activité de : {{ utilisateur.email }}</h1>
    </div>

    {% if tentatives is empty %}
        <p>Tu n’as pas encore fait de quiz.</p>
    {% else %}
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Quiz</th>
                    <th>Date et Heure</th>
                    <th>Pourcentage (%)</th>
                    <th>Durée</th>
                </tr>
            </thead>
            <tbody>
                {% for tentative in tentatives %}
                    <tr>
                        <td>{{ tentative.quiz.titre ?? 'Quiz' }}</td>
                        <td>
                            {% if tentative.dateFin %}
                                {{ tentative.dateFin|date('d/m/Y H:i') }}
                            {% else %}
                                {{ tentative.dateDebut|date('d/m/Y H:i') }}
                            {% endif %}
                        </td>
                        <td>{{ tentative.pourcentage ?? 0 }} %</td>
                        <td>
                            {% if tentative.dateFin %}
                                {% set d = tentative.formatDuration() %}
                                {{ d.label }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
