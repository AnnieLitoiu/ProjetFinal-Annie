{% extends 'base.html.twig' %}

{% block title %}Mon activité
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="d-flex justify-content-between align-items-center mb-3">
			<h1 class="mb-0">
				Activité de :
				{{ utilisateur.prenom is not empty ? utilisateur.prenom : '' }}
				{{ utilisateur.nom is not empty ? utilisateur.nom : '' }}
				{% if utilisateur.prenom is empty and utilisateur.nom is empty %}
					{{ utilisateur.email }}
				{% endif %}
			</h1>
		</div>

		{% if tentatives is empty %}
			<p>Tu n’as pas encore fait de quiz.</p>
		{% else %}
			<table class="table mt-3">
				<thead>
					<tr>
						<th>Quiz</th>
						<th>Date et Heure</th>
						<th>Pourcentage (%)</th>
						<th>Temps alloué</th>
					</tr>
				</thead>
				<tbody>
					{% for tentative in tentatives %}
						<tr>
							<td>{{ tentative.quiz.titre ?? 'Quiz' }}</td>
							<td>
								{% if tentative.dateFin %}
									{{ tentative.dateFin|date('d/m/Y H:i') }}
								{% else %}
									{{ tentative.dateDebut|date('d/m/Y H:i') }}
								{% endif %}
							</td>
							<td>
								{% set pct = tentative.pourcentage ?? 0 %}
								{% if pct >= 80 %}
									<span class="badge bg-success">{{ pct }}
										%</span>
								{% elseif pct >= 50 %}
									<span class="badge bg-warning text-dark">{{ pct }}
										%</span>
								{% else %}
									<span class="badge bg-danger">{{ pct }}
										%</span>
								{% endif %}
							</td>
							<td>
								{% if tentative.tempsAlloueSecondes %}
									{% set allo = tentative.tempsAlloueSecondes %}
									{% set minutes = (allo // 60) %}
									{% set secondes = (allo % 60) %}
									{{ minutes }}
									min
									{{ secondes }}
									s
								{% else %}
									-
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	</div>
{% endblock %}
