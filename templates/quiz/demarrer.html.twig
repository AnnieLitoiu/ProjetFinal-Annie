{% extends 'base.html.twig' %}

{% block title %}Démarrer le quiz
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mb-3">{{ quiz.titre }}</h1>
		<p class="text-muted mb-4">Choisissez le nombre de questions et démarrez le quiz.</p>

		<form method="post" action="{{ path('app_start_quiz', {id: quiz.id}) }}" class="vstack gap-3">
			<div>
				<small class="text-muted d-block mb-2">(
					{{ temps_par_question }}
					s/question )</small>

				<div class="form-check">
					<input class="form-check-input" type="radio" name="nombre_questions" id="nb5" value="5">
					<label class="form-check-label" for="nb5">
						5 questions — environ
						{{ (5 * (temps_par_question / 60))|number_format(0) }}
						minutes
					</label>
				</div>

				<div class="form-check">
					<input class="form-check-input" type="radio" name="nombre_questions" id="nb10" value="10" checked>
					<label class="form-check-label" for="nb10">
						10 questions — environ
						{{ (10 * (temps_par_question / 60))|number_format(0) }}
						minutes
					</label>
				</div>

				<div class="form-check">
					<input class="form-check-input" type="radio" name="nombre_questions" id="nb15" value="15">
					<label class="form-check-label" for="nb15">
						15 questions — environ
						{{ (15 * (temps_par_question / 60))|number_format(0) }}
						minutes
					</label>
				</div>
			</div>

			<div>
				<button type="submit" class="btn btn-turquoise btn-sm">Commencer</button>
				<a href="{{ path('app_quiz_liste', {niveau: quiz.niveau.id}) }}" class="btn btn-secondary btn-sm">Annuler</a>
			</div>
		</form>
	</div>
{% endblock %}
